/* pages/personal/personal.wxss */
.headerBox {
  height: 260rpx;
  text-align: center;
  font-size: 28rpx;
  background: #03c173;
  padding-top: 120rpx;
  color: #fff;
}
.headerBox .imgBox {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background: #03c173;
  margin: 0 auto 20rpx auto;
  overflow: hidden;
}
.headerBox image {
  height: 100%;
  width: 100%;
}
.contentBox {
  padding: 0 20rpx;
}
.iconBox {
  width: 70rpx;
  height: 70rpx;
  padding: 4rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 70rpx;
  margin-right: 30rpx;
  display: inline-block;
}
.erweima {
  background: #64deac;
}
.pImg {
  background: rgba(238, 85, 238, 0.333) !important;
}
.schedule {
  background: skyblue;
}
.update {
  background: rgba(168, 227, 223, 1);
}
.accept {
  background: #f39d8b;
}
.iconBox image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.van-cell-text {
  display: inline-block;
}
.van-center-enter-active,.van-center-leave-active {
    width: 600rpx;
    padding: 30rpx;
    border-radius: 10rpx;
}
.msgView {
  text-align: center;
} 

.addressBtn {
  width: 100%;
  height: 60rpx;
  margin: 40rpx 0 0 0;
  padding: 6rpx;
  font-size: 32rpx;
  background: #03c173;
  line-height: 60rpx;
  box-sizing: content-box;
  color: #fff;
  display: inline-block;
}
.van-popup {
    width: 74%;
    text-align: center;
    padding: 40rpx;
}
.cancelMsg {
    width: 100%;
    margin: 0 auto;
    margin-bottom: 40rpx;
    border: 1px solid #e5e5e5;
    text-align: left;
    padding: 10rpx;
    box-sizing: border-box;
}