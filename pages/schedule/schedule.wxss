/* pages/schedule/schedule.wxss */
.weekTab {
  display: flex;
  justify-content: flex-start;
  border-bottom: 1px solid #e5e5e5;
  border-top: 1px solid #e5e5e5;
}
.weekTab .weekBox {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  border-right: 1px solid #e5e5e5;
}
.timeContainer {
  margin-top: 20rpx;
  padding: 20rpx;
}
.timeContainer .text {
  flex: 1;
  display: inline-block;
  border: 1px solid #e5e5e5;
  box-sizing: border-box;
  text-align: center;
  padding: 30rpx 8rpx;
  margin-top: 5rpx;
}
.weekActive {
  color: #fff;
  background: #03c173;
}
.timeActive {
  background: orange;
  color: #fff;

}
.allday {
  display: flex;
  justify-content: flex-start;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
  text-align: center;
}
.allday text {
  flex: 1;
  border: 1px solid #e5e5e5;
  padding: 20rpx 0;
}
.tip {
  font-size: 24rpx;
  color: gray;
  padding: 20rpx;
}
