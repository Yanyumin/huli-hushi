<!--index.wxml-->
<view class="homeContainer">
  <swiper indicator-dots="{{indicatorDots}}"
    autoplay="true" interval="5000" duration="1000" indicatorDots="true">
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="355" height="150"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="contentBox">
    <view class="eventBox">
      <view class="eventList" bindtap="clickEvent">
        接单列表(10)
      </view>
      <view class="todayService" bindtap='clickToday'>
        今日服务(2)
      </view>
    </view>
    <view class="eventContainer" wx:if="{{showEvent}}">
      <orderItem
        datas="{{oderList}}"
        bind:startService="startService"
      ></orderItem>
    </view>
    <view class="todayServiceContainer" wx:if="{{todayServiceShow}}">
      <orderItem datas="{{todayOderList}}"></orderItem>
    </view>
  </view>
</view>

