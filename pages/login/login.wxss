.login_container {
    padding: 50rpx 10rpx;
}

.login_container .user_logo {
    overflow: hidden;
    height: 230rpx;
    position: relative;
}

.login_container .user_logo .user_avatar {
    position: absolute;
    left: 50%;
    top: 30%;
    transform: translateX(-50%);
}

.login_container .user_avatar .userinfo-logIcon {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.login_container .form-wrapper .tabs {
    width: 550rpx;
    margin: 20rpx auto;
}

.form_inp .input-area {

    padding-bottom: 60rpx;
}
.login_container .form-wrapper .tips{
font-size: 30rpx;
color: #cccccc;
text-align: center;
padding: 20rpx 0;
}
.login_container .logo_btn{
padding-top: 30rpx;
position: relative;
height: 100rpx;
text-align: center;
}
.login_container .logo_btn button {
 width: 100%;
opacity: 0;
position: absolute;
left: 0;
top: 0;
}