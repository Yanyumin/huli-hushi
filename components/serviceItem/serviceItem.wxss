/* components/serviceItem/serviceItem.wxss */
.thisProject {
 margin-top: 15rpx;
  padding: 0rpx 10rpx;
  font-size: 30rpx;
  display: flex;
  border-bottom: 1px solid #e5e5e5;
  border-top: 1px solid #e5e5e5;
}
.imgBox {
  width: 150rpx;
  height: 150rpx;
}
.imgBox image {
  width: 100%;
  height: 100%;
}
.projectInfo {
  margin-left: 30rpx;
  flex: 1;
}
.projectInfo .projectName {
  font-weight: 600;
}
.projectInfo .projectDesc {
  color: #666;
  line-height: 60rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.projectInfo .timeAndPrice {
  color: #666;
  font-size: 28rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}
.iconfont {
  width: 34rpx;
  height: 34rpx;
  vertical-align: -5rpx;
}
.time{
  line-height: 60rpx;
}
.price {
  font-size: 36rpx;
  color: orange
}
 .service {
     /* padding: 10rpx; */
    font-size: 28rpx;
    vertical-align: middle;

}

 .service .ser_icon {
    color: #6d6b6b;
}

 .number {
    text-align: right;
}
.serviceItemContainer{
 margin-top: 15rpx;
padding: 0 14rpx
}